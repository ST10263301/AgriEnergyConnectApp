<div class="employee-dashboard-wrapper">
    <!-- Background Elements -->
    <div class="background-leaves"></div>
    <div class="background-pattern"></div>

    <div class="employee-dashboard-container">
        <div class="dashboard-header">
            <h2><i class="fas fa-user-tie"></i> Welcome, Employee!</h2>
            <p class="greeting-text">Manage your agricultural network efficiently</p>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
        }

        <div class="action-widgets">
            <!-- Create Farmer Profile Widget -->
            <div class="action-widget create-farmer-widget">
                <div class="widget-icon">
                    <i class="fas fa-user-plus"></i>
                </div>
                <div class="widget-content">
                    <h3>Create Farmer Profile</h3>
                    <p>Register new farmers to the system</p>
                    <a asp-controller="Dashboard" asp-action="CreateFarmerProfile" class="widget-button">
                        Get Started <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
                <div class="widget-corner">
                    <i class="fas fa-leaf"></i>
                </div>
            </div>

            <!-- View Products Widget -->
            <div class="action-widget view-products-widget">
                <div class="widget-icon">
                    <i class="fas fa-seedling"></i>
                </div>
                <div class="widget-content">
                    <h3>View Products</h3>
                    <p>Browse all agricultural products</p>
                    <a asp-controller="Dashboard" asp-action="ViewAllProducts" class="widget-button">
                        Explore <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
                <div class="widget-corner">
                    <i class="fas fa-wheat-alt"></i>
                </div>
            </div>

            <!-- View Farmers Widget -->
            <div class="action-widget view-farmers-widget">
                <div class="widget-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="widget-content">
                    <h3>View Farmers</h3>
                    <p>Manage your farmer network</p>
                    <a asp-controller="Dashboard" asp-action="ViewFarmers" class="widget-button">
                        View All <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
                <div class="widget-corner">
                    <i class="fas fa-tractor"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .employee-dashboard-wrapper {
        min-height: 100vh;
        padding: 2rem;
        position: relative;
        overflow: hidden;
        background: linear-gradient(135deg, #f5fdf7 0%, #e8f5e9 100%);
    }

    /* Background Elements */
    .background-leaves {
        position: absolute;
        top: 0;
        right: 0;
        width: 300px;
        height: 300px;
        background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" fill="%232d6a4f" opacity="0.05"><path d="M50,5 C60,20 70,30 80,40 C90,50 95,60 95,70 C95,80 85,90 75,90 C65,90 55,80 50,70 C45,80 35,90 25,90 C15,90 5,80 5,70 C5,60 10,50 20,40 C30,30 40,20 50,5 Z"/></svg>');
        background-size: contain;
        background-repeat: no-repeat;
        z-index: 0;
    }

    .background-pattern {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100px;
        background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 20" fill="%232d6a4f" opacity="0.05"><circle cx="10" cy="10" r="5"/><circle cx="30" cy="10" r="5"/><circle cx="50" cy="10" r="5"/><circle cx="70" cy="10" r="5"/><circle cx="90" cy="10" r="5"/></svg>');
        background-repeat: repeat-x;
        z-index: 0;
    }

    .employee-dashboard-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2.5rem;
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        position: relative;
        z-index: 1;
        backdrop-filter: blur(5px);
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

    .dashboard-header {
        margin-bottom: 2.5rem;
        text-align: center;
        position: relative;
    }

    .dashboard-header h2 {
        color: #2d6a4f;
        font-weight: 700;
        font-size: 2.2rem;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.05);
    }

    .greeting-text {
        color: #5a6f5a;
        font-size: 1.1rem;
        margin-top: 0.5rem;
    }

    .action-widgets {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    .action-widget {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.06);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        border: 1px solid rgba(0, 0, 0, 0.05);
        z-index: 1;
    }

    .action-widget::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, rgba(255,255,255,0.8) 0%, rgba(255,255,255,0.4) 100%);
        z-index: -1;
    }

    .action-widget:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.12);
    }

    .create-farmer-widget {
        background-color: rgba(52, 152, 219, 0.05);
    }

    .view-products-widget {
        background-color: rgba(46, 204, 113, 0.05);
    }

    .view-farmers-widget {
        background-color: rgba(243, 156, 18, 0.05);
    }

    .widget-icon {
        font-size: 2.5rem;
        margin-bottom: 1.5rem;
        color: #2d6a4f;
        background-color: rgba(45, 106, 79, 0.1);
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
    }

    .widget-content h3 {
        font-size: 1.5rem;
        margin-bottom: 0.8rem;
        color: #2c3e50;
    }

    .widget-content p {
        color: #6c757d;
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    .widget-button {
        display: inline-flex;
        align-items: center;
        padding: 0.7rem 1.5rem;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        margin-top: auto;
        width: fit-content;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    }

    .create-farmer-widget .widget-button {
        background-color: #3498db;
        color: white;
    }

    .view-products-widget .widget-button {
        background-color: #2ecc71;
        color: white;
    }

    .view-farmers-widget .widget-button {
        background-color: #f39c12;
        color: white;
    }

    .widget-button:hover {
        transform: translateX(5px) scale(1.05);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    .widget-button i {
        margin-left: 8px;
        transition: all 0.3s ease;
    }

    .widget-button:hover i {
        transform: translateX(5px);
    }

    .widget-corner {
        position: absolute;
        bottom: 10px;
        right: 10px;
        font-size: 3rem;
        color: rgba(45, 106, 79, 0.1);
        z-index: -1;
    }

    .alert {
        border-radius: 10px;
        border: none;
        box-shadow: 0 3px 10px rgba(0,0,0,0.05);
    }

    @@media (max-width: 768px) {
        .action-widgets {
            grid-template-columns: 1fr;
        }

        .employee-dashboard-container {
            padding: 1.5rem;
        }

        .background-leaves {
            display: none;
        }
    }
</style>

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<!-- Bootstrap 5 for alert dismiss -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>