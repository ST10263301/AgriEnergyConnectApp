@model AgriEnergyConnectApp.Models.ProductFilterViewModel

<div class="products-container">
    <div class="products-header">
        <h1><i class="fas fa-shopping-basket"></i> Agricultural Products</h1>
        <p class="subtitle">Browse our marketplace of farm products</p>
    </div>

    <div class="filter-card">
        <form method="get" class="filter-form">
            <div class="filter-grid">
                <!-- Category Filter -->
                <div class="filter-group">
                    <label><i class="fas fa-tag"></i> Category</label>
                    <select name="category" class="form-select">
                        <option value="">All Categories</option>
                        @foreach (var cat in Model.AvailableCategories)
                        {
                            <option value="@cat" selected="@(cat == Model.Category)">@cat</option>
                        }
                    </select>
                </div>

                <!-- Date Range -->
                <div class="filter-group">
                    <label><i class="fas fa-calendar-alt"></i> Date Range</label>
                    <div class="date-range">
                        <input type="date" name="startDate" class="form-control"
                               value="@Model.StartDate?.ToString("yyyy-MM-dd")" placeholder="From" />
                        <span class="date-separator">to</span>
                        <input type="date" name="endDate" class="form-control"
                               value="@Model.EndDate?.ToString("yyyy-MM-dd")" placeholder="To" />
                    </div>
                </div>

                <!-- Filter Button -->
                <div class="filter-actions">
                    <button type="submit" class="filter-btn">
                        <i class="fas fa-filter"></i> Apply Filters
                    </button>
                </div>
            </div>
        </form>
    </div>

    <div class="products-table-container">
        <div class="table-responsive">
            <table class="products-table">
                <thead>
                    <tr>
                        <th><i class="fas fa-seedling"></i> Product</th>
                        <th><i class="fas fa-tags"></i> Category</th>
                        <th><i class="far fa-calendar"></i> Date</th>
                        <th><i class="fas fa-money-bill-wave"></i> Price</th>
                        <th><i class="fas fa-user-tie"></i> Farmer</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Products.Any())
                    {
                        @foreach (var product in Model.Products)
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td><span class="category-badge">@product.Category</span></td>
                                <td>@product.Date.ToString("MMM dd, yyyy")</td>
                                <td class="price">@product.Price.ToString("C")</td>
                                <td class="farmer-name">@product.User?.FullName</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="no-products">
                                <i class="fas fa-info-circle"></i> No products found matching your filters
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    :root {
        --primary: #2d6a4f;
        --secondary: #5cb85c;
        --accent: #f0ad4e;
        --dark: #1a3a27;
        --light: #f8f9fa;
        --text: #333;
        --text-light: #6c757d;
    }

    .products-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .products-header {
        margin-bottom: 1.5rem;
    }

        .products-header h1 {
            color: var(--primary);
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

            .products-header h1 i {
                margin-right: 10px;
            }

    .subtitle {
        color: var(--text-light);
        margin: 0;
    }

    /* Filter Card */
    .filter-card {
        background-color: white;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }

    .filter-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        align-items: end;
    }

    .filter-group label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 600;
        color: var(--text);
    }

        .filter-group label i {
            margin-right: 8px;
            color: var(--primary);
        }

    .form-select, .form-control {
        width: 100%;
        padding: 10px 15px;
        border: 1px solid #ddd;
        border-radius: 8px;
        font-size: 1rem;
        transition: all 0.3s;
    }

        .form-select:focus, .form-control:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(45, 106, 79, 0.1);
            outline: none;
        }

    .date-range {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .date-separator {
        color: var(--text-light);
        padding: 0 0.5rem;
    }

    .filter-actions {
        display: flex;
        justify-content: flex-end;
    }

    .filter-btn {
        background-color: var(--primary);
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .filter-btn:hover {
            background-color: var(--dark);
            transform: translateY(-2px);
        }

    /* Products Table */
    .products-table-container {
        background-color: white;
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }

    .products-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

        .products-table thead th {
            background-color: var(--primary);
            color: white;
            padding: 1rem;
            text-align: left;
            font-weight: 600;
            position: sticky;
            top: 0;
        }

            .products-table thead th i {
                margin-right: 8px;
            }

        .products-table tbody tr {
            transition: all 0.3s;
        }

            .products-table tbody tr:nth-child(even) {
                background-color: #f9f9f9;
            }

            .products-table tbody tr:hover {
                background-color: rgba(45, 106, 79, 0.05);
            }

        .products-table td {
            padding: 1rem;
            border-bottom: 1px solid #eee;
            vertical-align: middle;
        }

    .category-badge {
        background-color: rgba(45, 106, 79, 0.1);
        color: var(--primary);
        padding: 0.25rem 0.75rem;
        border-radius: 50px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .price {
        font-weight: 600;
        color: var(--primary);
    }

    .farmer-name {
        font-weight: 500;
        color: var(--dark);
    }

    .no-products {
        text-align: center;
        padding: 2rem;
        color: var(--text-light);
    }

        .no-products i {
            font-size: 1.5rem;
            color: var(--primary);
            margin-right: 8px;
        }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .filter-grid {
            grid-template-columns: 1fr;
        }

        .filter-actions {
            justify-content: center;
        }

        .products-table thead {
            display: none;
        }

        .products-table tbody tr {
            display: block;
            margin-bottom: 1rem;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            padding: 0.5rem;
        }

        .products-table td {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.75rem 1rem;
            border-bottom: 1px solid #eee;
        }

            .products-table td::before {
                content: attr(data-label);
                font-weight: 600;
                color: var(--primary);
                margin-right: 1rem;
            }

        .category-badge {
            margin-left: auto;
        }
    }
</style>

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<script>
    // For mobile responsive table
    document.addEventListener('DOMContentLoaded', function() {
        const table = document.querySelector('.products-table');
        if (table) {
            const headers = table.querySelectorAll('thead th');
            const rows = table.querySelectorAll('tbody tr');

            rows.forEach(row => {
                const cells = row.querySelectorAll('td');
                cells.forEach((cell, index) => {
                    if (headers[index]) {
                        cell.setAttribute('data-label', headers[index].textContent);
                    }
                });
            });
        }
    });
</script>