@model List<AgriEnergyConnectApp.Models.Product>

<div class="farmer-dashboard">
    <div class="dashboard-header">
        <div class="welcome-section">
            <h1><i class="fas fa-leaf"></i> Welcome, Farmer!</h1>
            <p class="subtitle">Manage your agricultural products</p>
        </div>
        <a href="/Product/Add" class="add-product-btn">
            <i class="fas fa-plus-circle"></i> Add New Product
        </a>
    </div>

    <div class="products-table-container">
        <div class="table-responsive">
            <table class="products-table">
                <thead>
                    <tr>
                        <th><i class="fas fa-seedling"></i> Product Name</th>
                        <th><i class="fas fa-tags"></i> Category</th>
                        <th><i class="far fa-calendar-alt"></i> Date</th>
                        <th><i class="fas fa-money-bill-wave"></i> Price</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td><span class="category-badge">@product.Category</span></td>
                                <td>@product.Date.ToString("MMM dd, yyyy")</td>
                                <td class="price">@product.Price.ToString("C")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="no-products">
                                <i class="fas fa-info-circle"></i> No products added yet
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    :root {
        --primary: #2d6a4f;
        --secondary: #5cb85c;
        --accent: #f0ad4e;
        --dark: #1a3a27;
        --light: #f8f9fa;
        --text: #333;
        --text-light: #6c757d;
    }

    .farmer-dashboard {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .dashboard-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .welcome-section h1 {
        color: var(--primary);
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

        .welcome-section h1 i {
            margin-right: 10px;
        }

    .subtitle {
        color: var(--text-light);
        margin: 0;
    }

    .add-product-btn {
        background-color: var(--primary);
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
    }

        .add-product-btn:hover {
            background-color: var(--dark);
            transform: translateY(-2px);
            box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        }

    .products-table-container {
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        overflow: hidden;
    }

    .products-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

        .products-table thead th {
            background-color: var(--primary);
            color: white;
            padding: 1rem;
            text-align: left;
            font-weight: 600;
            position: sticky;
            top: 0;
        }

            .products-table thead th i {
                margin-right: 8px;
            }

        .products-table tbody tr {
            transition: all 0.3s ease;
        }

            .products-table tbody tr:nth-child(even) {
                background-color: #f9f9f9;
            }

            .products-table tbody tr:hover {
                background-color: rgba(45, 106, 79, 0.05);
            }

        .products-table td {
            padding: 1rem;
            border-bottom: 1px solid #eee;
            vertical-align: middle;
        }

    .category-badge {
        background-color: rgba(45, 106, 79, 0.1);
        color: var(--primary);
        padding: 0.25rem 0.75rem;
        border-radius: 50px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .price {
        font-weight: 600;
        color: var(--primary);
    }

    .no-products {
        text-align: center;
        padding: 2rem;
        color: var(--text-light);
    }

        .no-products i {
            color: var(--primary);
            margin-right: 8px;
        }

    @@media (max-width: 768px) {
        .dashboard-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .products-table thead {
            display: none;
        }

        .products-table tbody tr {
            display: block;
            margin-bottom: 1rem;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            padding: 0.5rem;
        }

        .products-table td {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.75rem 1rem;
            border-bottom: 1px solid #eee;
        }

            .products-table td::before {
                content: attr(data-label);
                font-weight: 600;
                color: var(--primary);
                margin-right: 1rem;
            }

        .category-badge {
            margin-left: auto;
        }
    }
</style>

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<script>
    // Add data labels for mobile responsive table
    document.addEventListener('DOMContentLoaded', function () {
        const table = document.querySelector('.products-table');
        if (table) {
            const headers = table.querySelectorAll('thead th');
            const rows = table.querySelectorAll('tbody tr');

            rows.forEach(row => {
                const cells = row.querySelectorAll('td');
                cells.forEach((cell, index) => {
                    if (headers[index]) {
                        cell.setAttribute('data-label', headers[index].textContent);
                    }
                });
            });
        }
    });
</script>